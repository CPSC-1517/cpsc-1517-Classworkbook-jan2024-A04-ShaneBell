@page "/CustomerContactListExtension"

@using WestWindSystem.BLL;
@using WestWindSystem.DAL;
@using WestWindSystem.Entities;

<h3>AllCustomerContactNames</h3>

@* List all customer contact names in an unorderd list *@

<ul>
    @foreach (Customer aCustomer in customerList)
    {
        <li>@aCustomer.ContactName</li>
    }
</ul>

@code {

    [Inject]
    public CustomerServices customerServices { get; set; }

    public List<Customer> customerList = new();



    protected override Task OnInitializedAsync()
    {
        customerList = customerServices.GetAllCustomers();
        return base.OnInitializedAsync();
    }


}

